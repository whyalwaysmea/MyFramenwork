<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <include
        layout="@layout/widget_toolbar"/>

    <TextView
        android:id="@+id/list_activity"
        android:textSize="14sp"
        android:padding="10dp"
        android:text="@string/list_activity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <View
        android:background="@color/line"
        android:layout_width="match_parent"
        android:layout_height="1dp" />

    <TextView
        android:id="@+id/sticky_header_list_activity"
        android:textSize="14sp"
        android:padding="10dp"
        android:text="@string/sticky_header_list_activity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <View
        android:background="@color/line"
        android:layout_width="match_parent"
        android:layout_height="1dp" />

    <TextView
        android:id="@+id/section_list_activity"
        android:textSize="14sp"
        android:padding="10dp"
        android:text="@string/section_list_activity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <View
        android:background="@color/line"
        android:layout_width="match_parent"
        android:layout_height="1dp" />

    <TextView
        android:id="@+id/tab_activity"
        android:textSize="14sp"
        android:padding="10dp"
        android:text="@string/tab_activity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <View
        android:background="@color/line"
        android:layout_width="match_parent"
        android:layout_height="1dp" />

</LinearLayout>
